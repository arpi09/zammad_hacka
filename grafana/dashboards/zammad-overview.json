{
  "dashboard": {
    "title": "Zammad Ticket Overview",
    "tags": ["zammad", "tickets"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Total Tickets",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "tickets_timeseries",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Tickets by State",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "target": "tickets_by_state",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Tickets by Priority",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "target": "tickets_by_priority",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Tickets Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 18, "x": 0, "y": 8},
        "targets": [
          {
            "target": "tickets_timeseries",
            "refId": "A"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "short",
            "label": "Tickets"
          },
          {
            "format": "short"
          }
        ]
      }
    ],
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    }
  }
}

